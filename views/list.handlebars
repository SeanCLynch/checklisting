<div class="w-full md:w-3/5 md:mx-auto">

  <div class="p-4 font-sans font-medium tracking-normal">
    {{ user }} / {{ checklist.title }}
  </div>

  <div class="p-2 flex flex-col">
    {{#each checklist.items}}
    <div class="p-2 mb-2 bg-grey rounded">
      {{ this.content }}
    </div>
    {{/each}}
  </div>

  <div class="p-2 text-right">
    <a href="#" class="bg-purple hover:bg-purple-dark text-sm text-white font-bold py-2 px-4 rounded">
      Save
    </a>
    <a href="#" class="bg-purple hover:bg-purple-dark text-sm text-white font-bold py-2 px-4 rounded ml-4">
      Delete
    </a>
    <a href="#" class="bg-purple hover:bg-purple-dark text-sm text-white font-bold py-2 px-4 rounded ml-4">
      Copy
    </a>
    <a href="#" class="bg-purple hover:bg-purple-dark text-sm text-white font-bold py-2 px-4 rounded ml-4">
      Share
    </a>
  </div>

</div>